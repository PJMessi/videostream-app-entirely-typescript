{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "target": "es6",
        "types": [
            "node", "mocha"
        ],
        "esModuleInterop": true,
        "rootDir": "./",
        "outDir": "./dist",
        "paths": {
            "@root/*": ["./*"],
            "@middlewares/*": ["./middlewares/*"],
            "@services/*": ["./services/*"],
            "@routes/*": ["./routes/*"],
            "@controllers/*": ["./controllers/*"],
            "@models/*": ["./database/models/*"],
            "@factories/*": ["./database/factories/*"],
            "@helpers/*": ["./helpers/*"],
        }
    }
}